<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_rounded_white">

    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/aqua"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/NamaProduk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aqua Galon"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toTopOf="@id/imgProduk"
        app:layout_constraintEnd_toStartOf="@id/Status" />

    <TextView
        android:id="@+id/Harga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp 25.000"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toBottomOf="@id/NamaProduk"
        app:layout_constraintBottom_toBottomOf="@id/imgProduk"
        app:layout_constraintEnd_toStartOf="@id/btnBeliLagi" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBeliLagi"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="Beli Lagi"
        android:textSize="12sp"
        android:backgroundTint="#FFA94D"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
