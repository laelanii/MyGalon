<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:padding="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

    <!-- FOTO PRODUK -->
    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:src="@drawable/aqua"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/tvNamaProduk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Galon Aqua 19L"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/imgProduk"
        app:layout_constraintStart_toEndOf="@+id/imgProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Estimasi Pengiriman -->
    <TextView
        android:id="@+id/tvEstimasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimasi pengiriman: 5 - 6 Nov 2025"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaProduk"
        app:layout_constraintStart_toStartOf="@id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Biaya Pengiriman -->
    <TextView
        android:id="@+id/tvBiayaKirim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Biaya pengiriman: 0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvEstimasi"
        app:layout_constraintStart_toStartOf="@id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Jumlah -->
    <TextView
        android:id="@+id/tvJumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jumlah: 2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvBiayaKirim"
        app:layout_constraintStart_toStartOf="@id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Harga -->
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Harga: 5.000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvJumlah"
        app:layout_constraintStart_toStartOf="@id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total: 10.000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintStart_toStartOf="@id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Order -->
    <Button
        android:id="@+id/btnOrderItem"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Order"
        android:textStyle="bold"
        android:textSize="15sp"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
