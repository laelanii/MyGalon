<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aqua" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tvNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galon Aqua 19L"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvEstimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi pengiriman       5 - 6 Nov 2025"
                android:textSize="13sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/tvBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya pengiriman         0"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah                         2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga                          5.000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total                           10.000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingTop="3dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFA94D"
            android:text="Order"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_gravity="bottom" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
